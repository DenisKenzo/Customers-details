#source
  border-bottom 1px solid silver
  .add-source-wrap
    height 60px
    cursor pointer
    img
      width 40px
      margin 10px 30px 0 30px
      display block
    h1
      margin 18px -10px
      color #6b6b6b
      display block
  .add-select-wrap
    height 85px
    h1
      margin 10px 0 0 0
      padding 0 20px
      color #6b6b6b
      width 100%
      text-align end
  .button-wrap
    position relative
    width 40%
    height 60px
    display inline-block
    top -24px
    button
      height 30px
      border-radius 15px
      border 1px solid #6b6b6b
      background-color white
      width 80px
      margin 0 10px 20px 10px
      &:focus
        outline none
  .select-wrap
    padding-top 10px
    width 60%
    height 60px
    display inline-block
    .Select
      margin 0 30px
      width 100%
      height 30px
      .Select-control
        width 100%
        height 30px
        .Select-input
          position relative
          top -3px
          font-size 21px
        .Select-placeholder
          font-size 21px
        .Select-value-label
          position relative
          font-size 21px
        .Select-clear-zone
          display none
        .Select-arrow-zone
          width 40px
          padding-top 7px
          .Select-arrow
            border-width 11px 7px 2.5px
      .Select-menu-outer
        top 37px
        height 100%
        font-size 21px
        .Select-menu
          max-height 666px
          overflow-y auto
          background-color white
          .Select-option
            padding 3px 6px
  .hidden
    display none
.is-open
  .Select-control
    .Select-arrow
      border-width 0px 7px 11px!important
