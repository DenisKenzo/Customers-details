#source
  border-bottom 1px solid grey
  .add-source-wrap
    height 120px
    img
      float right
      width 80px
      margin 20px 40px 0 20px
    h1
      float right
      margin 40px 20px 0 20px
      color #6b6b6b
  .add-select-wrap
    h1
      margin 10px 30px 0 0
      color #6b6b6b
      width 100%
      text-align right
    .button-wrap
      width 40%
      height 100px
      display inline-block
      border 1px solid black
      button
        height 60px
        border-radius 30px
        border 2px solid #6b6b6b
        background-color white
        width 120px
        font-size 32px
    .select-wrap
      width 60%
      height 100px
      display inline-block
      border 1px solid black
      select
        height 60px
        width 150px
        font-size 36px
  .hidden
    display none
