#source
  border-bottom 1px solid silver
  .add-source-wrap
    height 60px
    cursor pointer
    img
      width 40px
      margin 10px 30px 0 30px
      display block
    h1
      margin 18px -10px
      color #6b6b6b
      display block
  .h85
    height 85px
  .h125
    height 125px
  .add-select-wrap
    h1
      margin 10px 0 0 0
      padding 0 20px
      color #6b6b6b
      width 100%
      text-align end
  .input-wrap
    width 100%
    height 40px
    margin-top -35px
    padding 0 10px
    .label
      width 45%
      display inline-block
      font-size 21px
      margin 0 9px
    input
      display inline-block
      width 45%
      height 30px
      border 1px solid grey
      text-align end
      color #00bfff
      padding 0 5px
      &:focus
        outline none
    .clients-list-wrap-right
      right 0
    .clients-list-wrap-left
      left 0
    .clients-list-wrap
      margin 0 31px
      width 43%
      background-color white
      z-index 15
      position absolute
      border 1px solid silver
      max-height 200px
      overflow-y scroll
      overflow-x hidden
      div
        font-size 21px
        text-align end
        padding 0 5px
  .button-wrap
    position relative
    width 40%
    height 60px
    display inline-block
    top -24px
    button
      height 30px
      border-radius 15px
      border 1px solid #6b6b6b
      background-color white
      width 80px
      margin 0 10px 20px 10px
      &:focus
        outline none
  .select-wrap
    padding-top 10px
    width 60%
    height 60px
    display inline-block
    position relative
    z-index 20
    .Select
      margin 0 30px
      width 100%
      height 30px
      .Select-control
        width 100%
        height 30px
        .Select-input
          position relative
          top -3px
          font-size 21px
        .Select-placeholder
          font-size 21px
        .Select-value-label
          position relative
          font-size 21px
        .Select-clear-zone
          display none
        .Select-arrow-zone
          width 40px
          padding-top 7px
          .Select-arrow
            border-width 11px 7px 2.5px
      .Select-menu-outer
        top 37px
        height 100%
        font-size 21px
        .Select-menu
          max-height 666px
          overflow-y auto
          background-color white
          .Select-option
            padding 3px 6px
  .hidden
    display none
.is-open
  .Select-control
    .Select-arrow
      border-width 0px 7px 11px!important
