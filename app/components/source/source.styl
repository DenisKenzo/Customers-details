#source
  border-bottom 1px solid grey
  .add-source-wrap
    // height 120px
    img
      float right
      width 80px
      margin 20px 40px 0 20px
    h1
      float right
      margin 40px 20px 0 20px
      color #6b6b6b
  .add-select-wrap
    height 85px
    h1
      margin 10px 0 0 -25px
      color #6b6b6b
      width 100%
      text-align right
  .button-wrap
    position relative
    width 40%
    height 60px
    display inline-block
    top -24px
    button
      height 30px
      border-radius 15px
      border 1px solid #6b6b6b
      background-color white
      width 80px
      font-size 22px
      margin 0 0 20px 10px
      &:focus
        outline none
  .select-wrap
    padding-top 10px
    width 60%
    height 60px
    display inline-block
    .Select
      float right
      margin-right 30px
      width 100%
      height 30px
      .Select-control
        float right
        width 100%
        height 30px
        .Select-input
          font-size 22px
        .Select-placeholder
          font-size 22px
        .Select-value-label
          position relative
          font-size 22px
        .Select-clear
          padding-top 2px
          font-size 22px
        .Select-arrow-zone
          width 40px
          padding-top 7px
          .Select-arrow
            border-width 11px 7px 2.5px
      .Select-menu-outer
        height 100%
        font-size 22px
        .Select-menu
          max-height 666px
          overflow-y auto
          background-color white
          .Select-option
            padding 3px 6px
  .hidden
    display none
.is-open
  .Select-control
    .Select-arrow
      border-width 0px 7px 11px!important
