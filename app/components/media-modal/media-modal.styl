.modal
  display block
  overflow scroll
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 1050
  -webkit-overflow-scrolling touch
  outline 0
  &.fade
    .modal-dialog
      -webkit-transform translate(0, -25%)
      -ms-transform translate(0, -25%)
      -o-transform translate(0, -25%)
      transform translate(0, -25%)
      -webkit-transition -webkit-transform 0.3s ease-out
      -moz-transition -moz-transform 0.3s ease-out
      -o-transition -o-transform 0.3s ease-out
      transition transform 0.3s ease-out
  &.in
    opacity 1
    .modal-dialog
      -webkit-transform translate(0, 0)
      -ms-transform translate(0, 0)
      -o-transform translate(0, 0)
      transform translate(0, 0)
.modal-dialog
  position relative
  margin 4px
  width 98%
  height 100%
.modal-content
  position relative
  background-color #fff
  outline 0
  border-radius 20px
  #gallery-swiper-wrap
    height 460px
    img
      width 100%
      height 100%
      object-fit cover
    video
      width 100%
      height 100%
    iframe
      width 100%
      height 100%
    audio
      width 100%
      height 40px
    div
      width 100%
      height 100%
    .audio-img
      width 100%
      height 420px
.swiper-button-prev, .swiper-button-next
  position absolute
  top 45%
  width 60px
  height 60px
  border-radius 50%
  z-index 10
  cursor pointer
  background-color rgba(255, 255, 255, 0.5)
.swiper-button-prev
  left 5px
  right auto
  &:before
    position relative
    content '<'
    font-size 40px
    left 15px
    top 2px
.swiper-button-next
  right 5px
  left auto
  &:before
    position relative
    content '>'
    font-size 40px
    left 22px
    top 2px
.modal-header
  background-color black
  height 60px
  border-top-left-radius 10px
  border-top-right-radius 10px
  img
    float right
    width 40px
    margin 10px 10px 10px 0
    transform rotate(45deg)
.modal-footer
  background-color black
  text-align right
  border-bottom-left-radius 10px
  border-bottom-right-radius 10px
  .data
    width 70%
    padding-top 10px
    display inline-block
    h1
      float left
      text-align left
      width 100%
      color grey
      padding-left 10px
      margin 0px
      font-size 18px
      &:nth-of-type(2)
        color white
        font-size 18px
        min-height 38px
    .textarea
      top 7px
      position relative
      display block
      font-family inherit
      float left
      text-align left
      width 95%
      color black
      font-size 18px
      left 10px
      margin 0px
      resize none
      margin-bottom 15px
    button
      float left
      height 30px
      border-radius 15px
      border 1px solid #6b6b6b
      background-color white
      width 80px
      font-size 22px
      margin 0 10px 0 10px
      &:focus
        outline none
  .icons
    width 30%
    height 100%
    display inline-block
    padding 10px
    img
      height 100%
      width 50%
      padding-right 10px
      &:nth-of-type(1)
        padding-right 20px
.modal-backdrop
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 1040
  background-color #000
  &.in
    opacity 0.5
.fade
  opacity 0
  -webkit-transition opacity .15s linear
  -o-transition opacity .15s linear
  transition opacity .15s linear
.hidden
  display none
.pointer-events
  pointer-events none
.noSwiping
  width 100%
  height 100%
  pointer-events none
