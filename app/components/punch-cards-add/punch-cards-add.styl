#punch_cards_adding
  .topnav_punch
    .header
      background-color darkslateblue
      height 50px
      position relative
      text-align center
      .arrow-wrap
        display inline-block
        padding-top 8px
        float left
        width 15%
        .arrow-back
          color white
          cursor pointer
          width 16px
      .before
        display inline-block
        height 100%
        vertical-align middle
      .client-name
        display inline-block
        vertical-align middle
        width 70%
        h1
          color white
          display inline-block
          margin 0 auto
          padding-left 5px
          padding-right 5px
      .edit-wrap
        float right
        width 15%
        display inline-block
        margin-top 5px
  .service_edit
    .on
      background deepskyblue!important
