#email
  border-bottom 1px solid grey
  .email
    height 120px
    img
      width 80px
      margin 20px 0 20px 20px
    .email-label
      padding 5px 20px 5px 20px
      height 36px
      border-radius 20px
      background-color #e8ffff
      margin-top 20px
      margin-right 30px
      text-align center
      font-size 20px
      float right
      color #6b6b6b
    h1
      float right
      margin-top 65px
      transform translateX(60px)
      color #00B6FB
      font-weight 500
  .add-email
    height 120px
    cursor pointer
    img
      float right
      width 80px
      margin 20px 60px 0 20px
      display block
    h1
      float right
      margin 40px 20px 0 20px
      color #6b6b6b
      display block
  .email-edit
    width 100%
    display block
    height 240px
    .edit
      width 100%
      padding 40px 30px 0 30px
      .edit-input
        display inline-block
        height 60px
        width 80%
        border 1px solid #6b6b6b
        font-size 36px
        text-align right
        color deepskyblue
        font-weight 500
        &:focus
          outline none
      .edit-label
        padding-left 30px
        color #6b6b6b
        display inline-block
    .button
      width 100%
      padding 20px 30px 0 30px
      button
        display inline-block
        height 60px
        border-radius 30px
        border 2px solid #6b6b6b
        background-color white
        width 120px
        font-size 32px
        transform translateY(6px)
        margin-right 18%
        &:focus
          outline none
  .hidden
    display none
