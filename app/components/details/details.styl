#details
  border-bottom 1px solid silver
  .details-wrap
    width 100%
    height 30px
    .details-label
      padding 0px 20px
      height 20px
      border-radius 10px
      background-color #e8ffff
      margin-top 5px
      margin-right 10px
      text-align center
      font-size 14px
      float right
      color #6b6b6b
  .data-wrap
    width 100%
    height 70px
    .details-button
      height 30px
      border-radius 15px
      border 1px solid #6b6b6b
      width 80px
      font-size 22px
      margin 10px 20px 0 0
      float right
      background-color white
      box-shadow 0px 4px 8px gray
      font-size 22px
      &:focus
        outline none
    h1
      width 63%
      float left
      margin 10px 0 0 20px
      color #6b6b6b
      font-size 21px
    img
      margin-top 10px
      width 30px
      height 30px
  .hidden
    display none
