#social-network
  border-bottom 1px solid silver
  .add-source-wrap
    height 60px
    cursor pointer
    img
      float right
      width 40px
      margin 10px 30px 0 10px
      display block
    h1
      float right
      margin 20px 10px 0 20px
      color #6b6b6b
      display block
  .add-select-wrap
    padding-bottom 10px
    h1
      margin 10px 0 0 -25px
      color #6b6b6b
      width 100%
      text-align right
    .button-wrap
      position relative
      width 100%
      height 30px
      display inline-block
      button
        height 30px
        border-radius 15px
        border 1px solid #6b6b6b
        background-color white
        width 80px
        font-size 22px
        margin 0 0 0 10px
        &:focus
          outline none
    .item-wrap
      width 100%
      height 60px
      .delete-wrap
        width 12%
        height 60px
        display inline-block
        padding-left 10px
        .delete
          position relative
          transform rotate(45deg)
          width 30px
          top -16px
      .img-wrap
        display inline-block
        width 10%
        height 60px
        img
          position relative
          width 33px
          height 33px
          margin-left 5px
          top -16px
      .input-wrap
        position relative
        width 39%
        height 60px
        display inline-block
        input
          float left
          position relative
          display inline-block
          width 100%
          height 30px
          border 1px solid #6b6b6b
          font-size 22px
          top 12px
          border none
          &:focus
            outline none
            text-align right
      .select-wrap
        padding-top 10px
        width 33%
        height 60px
        display inline-block
        .Select
          float right
          width 100%
          height 30px
          .Select-control
            float right
            width 100%
            height 30px
            .Select-input
              font-size 22px
            .Select-placeholder
              font-size 22px
            .Select-value-label
              position relative
              font-size 22px
            .Select-clear-zone
              display none
            .Select-arrow-zone
              width 40px
              padding-top 7px
              .Select-arrow
                border-width 11px 7px 2.5px
          .Select-menu-outer
            height 100%
            font-size 22px
            .Select-menu
              max-height 666px
              overflow-y auto
              background-color white
              .Select-option
                padding 3px 6px
  .hidden
    display none
.is-open
  .Select-control
    .Select-arrow
      border-width 0px 7px 11px!important
