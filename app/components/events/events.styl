#events
  background-color #e8ffff
  height 275px
  border-bottom 1px solid grey
  .clock
    width 80px
    margin 10px 0 0 20px
  .babel
    float right
    margin-right 30px
    color #6b6b6b
  #swiper-wrap-notes
    .swiper-container
      position static
      margin-top 10px
      .swiper-wrapper
        .swiper-slide
          padding 0px 30px 30px 30px
          .note
            background white
            border-radius 20px
            width 100%
            height 160px
            border 1px solid #bcbcbc
            box-shadow 1px 3px 6px #bcbcbc
            display inline-block
      .swiper-pagination
        transform translateY(-260px)
        bottom auto
        .swiper-pagination-bullet
          width 20px
          height 20px
        .swiper-pagination-bullet-active
          background #fc351f
