#adress
  border-bottom 1px solid silver
  .adress
    height 120px
    .google-map
      height 100px
      display inline-block
      width 24%
      margin 10px 10px
      img
        width 100%
        height 100%
    .data-wrap
      width 71%
      display inline-block
      .adress-label-wrap
        width 100%
        height 30px
        .adress-label
          padding 0px 20px
          height 20px
          border-radius 10px
          background-color #e8ffff
          margin 5px 10px 0 10px
          text-align center
          font-size 14px
          color #6b6b6b
      .address
        width 70%
        height 80px
        position relative
        img
          position absolute
          width 35px
          height 30px
          top 30px
        h1
          margin 10px 30px 0 30px
          font-weight 500
          text-align end
          color #304f63
          text-decoration none
  .add-adress
    height 60px
    cursor pointer
    img
      width 40px
      margin 10px 30px 0 30px
      display block
    h1
      margin 18px -10px
      color #6b6b6b
      display block
  .adress-edit
    display block
    width 100%
    height 90px
    padding 10px
    .edit
      width 100%
      height 30px
      .edit-input
        display inline-block
        height 30px
        width 75%
        border 1px solid #6b6b6b
        text-align right
        color deepskyblue
        font-weight 500
        &:focus
          outline none
      .edit-label
        width 25%
        padding 0 10px
        color #6b6b6b
        display inline-block
        margin 0
    .button
      width 100%
      height 35px
      padding-top 10px
      button
        display inline-block
        height 30px
        border-radius 15px
        border 1px solid #6b6b6b
        background-color white
        width 80px
        margin 0 0 20px 0
        &:focus
          outline none
  .hidden
    display none
