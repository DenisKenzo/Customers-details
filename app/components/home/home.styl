    button
      float right
      margin 90px -408px 0 0
      height 70px
      width 160px
      border-radius 35px
      background-color white
      border 1px solid gray
      box-shadow 0px 4px 8px gray
      font-size 42px
      &:focus
        outline none
    h1
      float right
      margin 53px 80px 0 20px
