  .block2
    border-bottom 1px solid grey
    height 340px
    .checkbox-wrap
      height 110px
      padding-top 30px
      padding-bottom 30px
      .switch.on
        background-color limegreen
      .switch.on .switch-toggle
        left 75px
      .switch.disabled
        cursor not-allowed
      .switch
        float right
        height 60px
        width 135px
        margin-right 30px
        border-radius 30px
        border 3px solid grey
        background-color lightgray
        cursor pointer
        display inline-block
        .switch-toggle
          width 56px
          height 56px
          border-radius 30px
          border 1px solid #999
          box-shadow: 1px 1px 1px #ccc
          left 0
          background #fff
          position relative
          transition left .2s ease-in-out
      h1
        float right
        text-align right
        color #6b6b6b
        padding-right 20px
        transform translateY(-6px)
    h1
      margin-top 10px
      color yellowgreen
      transform translateX(30px)
    .autograph
      float left
      margin 10px 0 0 40px
    button
      display inline-block
      margin 10px 80px 0 0
      height 70px
      width 180px
      border-radius 35px
      background-color white
      border 4px solid gray
      font-size 42px
    button:nth-of-type(1)
      margin-left 60px
  .test
    height 1000px
