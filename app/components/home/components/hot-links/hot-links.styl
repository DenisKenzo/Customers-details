#hot-links
  height 80px
  border-bottom 1px solid silver
  padding-top 10px
  .link
    margin 0 7px
    height 60px
    border 5px solid purple
    text-align center
    color purple
    font-size 16px
    display inline-flex
    justify-content center
    align-items center
    a
      text-decoration none
      color purple
    &:nth-of-type(1)
      position relative
      top -10px
  .circle
    width 60px
    border-radius 50%
  .square
    width 80px
    border-radius 18px
