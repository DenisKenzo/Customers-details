@import "../../../../color.styl"
#hot-links
  height 80px
  padding-top 10px
  background $blockBackground
  .link
    margin 0 10px
    height 60px
    text-align center
    color purple
    font-size 16px
    display inline-flex
    justify-content center
    align-items center
    background $hotLinkBackground
  .link.add-btn
      width 60px
      background transparent
    a
      text-decoration none
      color purple
  .circle
    width 60px
    border-radius 50%
  .square
    width 60px
    border-radius 18px
