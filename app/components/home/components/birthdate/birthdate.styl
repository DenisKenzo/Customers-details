@import "../../../../color.styl"
#birthdate
  width 100%
  .label
    font-size 0.8em
    font-weight 600
    color $headerColor
    margin-bottom 2%
  .wrapBDay
    display flex
    flex-direction column
    justify-content space-between
    margin 1% 0
  .birthdate-edit
    display flex
    width 100%
    justify-content space-between
    .edit-wrap
      display flex
      flex-direction column
      justify-content space-between
      margin 1% 0
  .input-wrap
    input
      background transparent
      font-size 1em
      border none
      &:focus
        outline none
  .hidden
    display none
  .button
    display flex
    align-items center
    button
      border-radius 15px
      border none
      background-color $headerColor
      color #fff
      &:focus
        outline none
