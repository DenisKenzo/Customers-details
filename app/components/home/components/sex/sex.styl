#sex
  width 100%
  border-bottom 1px solid silver
  padding 15px 50px
  .sex-wrap
    height 45px
    width 100%
    border-radius 23px
    border 2px solid grey
    background-color #f2f2f2
    position relative
    z-index 5
    .label
      position relative
      z-index 10
      display inline-block
      width 33.33%
      text-align center
      font-size 20px
      padding 6px
      font-weight 500
    .button
      text-align center
      font-size 20px
      padding 4px
      position absolute
      z-index 20
      height 40px
      width 33.33%
      border-radius 20px
      background-color white
      box-shadow 0px 3px 3px grey
      transition 80ms
      font-weight 500
    .button-male
      border 2px solid white
      background-color deepskyblue
      color white
    .button-female
      border 2px solid white
      background-color deeppink
      color white
