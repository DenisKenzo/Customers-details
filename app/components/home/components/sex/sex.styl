@import "../../../../color.styl"
#sex
  .block
    .radio
      display flex
      margin auto 0
      min-height 4em
      flex-direction row
      width 100%
      //border-top 1px solid $mainBackground
      justify-content space-between
      .radio-label
        margin auto 8%
      .circle
        width 20px
        height 20px
        margin auto 0
        background url(/dist/media/ic_radio_button.svg) no-repeat
    .radio.checked
      .circle
        background url(/dist/media/ic_radio_button_checked.svg) no-repeat
  .block.change-state-disable
    display none
