#hero
  position relative
  height 250px
  .client-img
    pointer-events none
    user-select none
    width 100%
    object-fit cover
    z-index 1
    height 250px
  .star-wrap
    width 42px
    color #6d6d6d
    position absolute
    top 20px
  .star-wrap-left
    left 10px
  .star-wrap-right
    right 10px
  .star
    fill #6d6d6d
  .star-active
    fill #fec20f
    stroke #fff
    stroke-miterlimit 10
    stroke-width 2px
  .toast
    position absolute
    top 22px
    left 80px
    background-color #fec20f
    border-radius 5px
    height 30px
    width 250px
    text-align center
    padding 4px 0
    transition opacity 0.5s ease-in-out
    opacity 0
  .toast-visible
    transition opacity 0.5s ease-in-out
    opacity 1
  .input-group
    bottom 0
    position absolute
    background: rgba(0,0,0,0.3)
    width 100%
    display table
    border-collapse separate
    .input-group-addon
      background: rgba(0,0,0,0.0)
      border none
      cursor pointer
      visibility visible
      padding 6px 8px 6px 8px
      font-size 14px
      font-weight 400
      line-height 1
      color #555
      text-align center
      border-radius 4px
      display table-cell
      width 1%
      vertical-align middle
      img
        width 30px
    .hidden
      display none
    .input-group-addon-hidden
      visibility hidden
    .input-wrap
      padding 7px
      .form-control
        background  white
        color grey
        font-weight 600
        height 30px
        text-align center
        width 100%
        &:focus
          background: rgba(0,0,0,0.0)
          text-align end
          border none
          box-shadow none
          outline none
          color #00b6fb
      .form-control-disabled
        pointer-events none
