@import "../../../../color.styl"
#hidden-fields
  height 100%
  .main-button
    margin 7px 7px 1px
    button
      width 100%
      height 3.077em
      border none
      margin 0 auto
      font-weight 600
      font-size 1.3em
      color $headerColor
      border-top-right-radius 8px
      border-top-left-radius 8px
      background-color $blockBackground
  .del-btn
    margin 0 7px 7px
    button
      width 100%
      height 3.077em
      border none
      margin 0 auto
      font-weight 600
      font-size 1.3em
      color $delColor
      border-bottom-right-radius 8px
      border-bottom-left-radius 8px
      background-color $blockBackground
