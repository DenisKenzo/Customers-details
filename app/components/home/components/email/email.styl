@import "../../../../color.styl"
#email
  padding 0 10px
  border-top 1px solid $mainBackground
  min-height 4em
  display flex
  .gmailwrap
    display flex
    // min-height 4em
    justify-content space-between
    width 100%
  .label
    font-size 0.8em
    font-weight 600
    color $headerColor
    margin 2% 0
  .linkto
    display flex
  .data-wrap
    display flex
    // margin auto 0
    // width 100%
    flex-direction column
    .label-wrap
      width 100%
      height 30px
      .email-label
        padding 0px 20px
        height 20px
        border-radius 10px
        background-color #e8ffff
        margin 5px 10px 0 10px
        text-align center
        font-size 14px
        color #6b6b6b
    .gmailcom
      font-size 16px
      padding-top 3px
.add-email
  display flex
  justify-content space-between
  width 100%
  .wrap-mail
    display flex
    flex-direction column
    justify-content space-between
    padding 1px 0 3px
  img
    width 38px
    height 38px
    // margin 10px 30px 0 30px
    display flex
    align-self center
  h1
    // margin 18px -10px
    color #6b6b6b
    // display block
.email-edit
  justify-content space-between
  // align-items center
  display flex
  // margin auto 0
  width 100%
  .edit
    // width 100%
    display flex
    flex-direction column
    // padding 2px 0
    .edit-input
      font-size 16px
      border transparent
      margin-top 5px
      // color deepskyblue
      color $headerColor
      &:focus
        outline none
    .edit-label
      width 25%
      padding 0 10px
      color #6b6b6b
      display inline-block
      margin 0
  .button
    display flex
    align-items center
    button
      border-radius 15px
      border none
      background-color $headerColor
      color #fff
      &:focus
        outline none
.hidden
  display none
