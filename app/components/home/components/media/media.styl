@import "../../../../color.styl"
#gallery
  .gallery-header
    margin 0 7px
    display flex
    flex-direction column
    border-top-right-radius 8px
    border-top-left-radius 8px
    background-color $blockBackground
    .title, .files-amount
      height 4em
      padding 0 10px
      margin auto 0
      display flex
      align-items center
    .files-amount
      border-top 1px solid $mainBackground
      color $headerColor
      font-size 0.8em
      font-weight 600
      height 5em
      justify-content space-between
      .action
        img
          &:nth-child(2)
            margin-left 8px
  #swiper-wrap-gallery
    margin 5px 7px
    .swiper-container
      position static
      .swiper-wrapper
        .swiper-slide
          width 10.3% !important
          margin 0 0 5px 0
          margin-top 0 !important
          background-color $blockBackground
          .media, video-block .media
            margin-left auto
            padding 10px 10px 0 10px
            height 9em
            width 100%
          .file-name
            font-size 0.8em
            font-weight 600
            margin-left 10px
          .file-date
            padding-bottom 10px
            margin-left 10px
            img
              padding 0
              width 9%
              height 9%
            .date
              font-size 0.8em
              margin-left 5px
          .video_play
            position absolute
            width 50px
            height 50px
            margin auto
            top -15px
            left 0
            bottom 0
            right 0
