  .add-media-wrap
    height 60px
    cursor pointer
    img
      width 40px
      margin 10px 30px 0 30px
      display block
    h1
      margin 18px -10px
      color #6b6b6b
      display block
  .add-input-wrap
    padding 10px
    .file-input
      height 26px
      width 100%
      border 1px solid #6b6b6b
      font-size 18px
      text-align right
      color deepskyblue
      font-weight 500
      border none
      &:focus
        outline none
    .previw-wrap
      padding-top 3px
      .previewText
        font-size 14px
      img
        height 60px
    .note-input
      padding-top 5px
      height 80px
      width 100%
      border 1px solid #6b6b6b
      text-align right
      color deepskyblue
      font-weight 500
      font-size 21px
      &:focus
        outline none
  button
    height 30px
    border-radius 15px
    border 1px solid #6b6b6b
    background-color white
    width 80px
    margin 0 20px 20px 10px
    &:focus
      outline none
  .hidden
    display none
