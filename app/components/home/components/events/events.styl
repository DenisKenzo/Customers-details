@import "../../../../color.styl"
#events
  background-color transparent
  #swiper-wrap-notes
    .swiper-container
      .swiper-wrapper
        .swiper-slide
          padding 0 7px 0 0
          width auto
          .note
            background-color $blockBackground
            border-radius 4px
            width 17.6em
            min-height 9.1em
            .note-head
              padding 0 10px
              display flex
              flex-direction row
              min-height 3.5em
              border-bottom 1px solid $mainBackground
              span
                margin auto 10px
            .block1
              padding 0 10px
              width 60%
              margin auto 0
              float left
              display flex
              height 5.5em
              .dates
                margin auto
                span
                  font-size 0.8em
                  margin auto 10px
            .block2
              width 40%
              font-size 2.5em
              float right
              display flex
              border-left 1px solid $mainBackground
              flex-direction column
              height 2.3em
              span
                margin auto
              span.min
                font-size 0.3em
                margin-top -10px
          .end-note
            background-color gainsboro!important
            color darkslategray
            .orange
              color orangered
      .swiper-pagination
        transform translateY(-133px)
        bottom auto
        .swiper-pagination-bullet
          width 11px
          height 11px
          margin 0 2px
        .swiper-pagination-bullet-active
          background #fc351f
