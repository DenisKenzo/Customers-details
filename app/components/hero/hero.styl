#hero
  position relative
  .client-img
    pointer-events none
    user-select none
    width 100%
    object-fit cover
    z-index 1
    height 550px
  .star-wrap
    width 72px
    color #6d6d6d
    position absolute
    top 40px
    left 20px
  .star
    fill #6d6d6d
  .star-active
    fill #fec20f
    stroke #fff
    stroke-miterlimit 10
    stroke-width 2px
  .input-group
    bottom 0
    height 80px
    position absolute
    background: rgba(0,0,0,0.3)
    width 100%
    display table
    border-collapse separate
    .input-group-addon
      background: rgba(0,0,0,0.0)
      border none
      cursor pointer
      visibility visible
      padding 6px 12px
      font-size 14px
      font-weight 400
      line-height 1
      color #555
      text-align center
      border-radius 4px
      display table-cell
      width 1%
      vertical-align middle
      img
        width 50px
    .input-group-addon-hidden
      visibility hidden
    .input-wrap
      padding 15px
      .form-control
        background  white
        color grey
        font-size 36px
        font-weight 600
        height 50px
        text-align center
        width 100%
        &:focus
          background: rgba(0,0,0,0.0)
          text-align right
          border none
          box-shadow none
          outline none
          color #00b6fb
      .form-control-disabled
        pointer-events none
