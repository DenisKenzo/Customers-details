#signature
  width 100%
  border-bottom 1px solid silver
  .checkbox-wrap
    padding-top 10px
    height 70px
    padding-bottom 10px
    .text
      width 70%
      display inline-block
      .text-h1
        margin 0
        color #6b6b6b
        padding-left 20px
    .switch
      display inline-block
      width 30%
      .switch.on
        background-color limegreen
      .switch.on .switch-toggle
        left 50px
      .switch.disabled
        cursor not-allowed
      .switch
        float right
        height 30px
        width 80px
        margin-right 25px
        border-radius 30px
        border 2px solid grey
        background-color lightgray
        cursor pointer
        display inline-block
        .switch-toggle
          width 26px
          height 26px
          border-radius 30px
          border 1px solid #999
          box-shadow: 1px 1px 1px #ccc
          left 0
          background #fff
          position relative
          transition left .2s ease-in-out
  .autograph-wrap
    width 100%
    .autograph
      float left
      width 40%
      margin 0 0 0 20px
      display inline-block
      img
        width 100%
    .label
      display inline-block
      width 55%
      h1
        margin-top 10px
        color yellowgreen
        transform translateX(30px)
      button
        display inline-block
        margin 0 6px
        height 30px
        width 100px
        border-radius 15px
        background-color white
        border 1px solid gray
        font-size 22px
  .add-signature-wrap
    width 100%
    height 40px
    padding 0 25px
    .text-wrap
      width 90%
      height 40px
      display inline-block
      h1
        position relative
        width 100%
        margin 0
        color #6b6b6b
        padding 0 10px
        text-align right
        top -10px
    .img-wrap
      width 10%
      height 40px
      display inline-block
      img
        width 35px
        height 35px
.hidden
  display none
