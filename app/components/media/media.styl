#gallery
  border-bottom 1px solid silver
  width 100%
  .label-wrap
    width 100%
    height 50px
    h1
      float left
      margin 10px 0 0 20px
      font-weight 500
      color #6b6b6b
      display inline-block
    .gallery-label
      padding 0px 20px
      height 20px
      border-radius 10px
      background-color #e8ffff
      margin-top 5px
      margin-right 10px
      text-align center
      font-size 14px
      float right
      color #6b6b6b
  #swiper-wrap-gallery
    .swiper-container
      position static
      .video_play
        position absolute
        width 50px
        height 50px
        margin auto
        top -15px
        left 0
        bottom 0
        right 0
      img, video
        padding 10px
        width 100%
        height 145px
      h1
        position relative
        width 100%
        text-align center
        padding-left 20px
        padding-right 20px
        margin-top -10px
        height 20px
        overflow hidden
        text-overflow ellipsis
        font-size 18px
      .swiper-pagination
        transform translateY(-376px)
        bottom auto
        .swiper-pagination-bullet
          width 11px
          height 11px
          margin 0 2px
        .swiper-pagination-bullet-active
          background #fc351f
  .add-media-wrap
    height 60px
    cursor pointer
    .add-button
      float right
      width 40px
      margin 10px 30px 0 10px
      display block
    .add-label
      float right
      margin 20px 10px 0 20px
      color #6b6b6b
      display block
  .add-input-wrap
    padding 10px
    .file-input
      height 26px
      width 100%
      border 1px solid #6b6b6b
      font-size 18px
      text-align right
      color deepskyblue
      font-weight 500
      border none
      &:focus
        outline none
    .previw-wrap
      padding-top 3px
      .previewText
        font-size 14px
      img
        height 60px
    .note-input
      padding-top 5px
      height 80px
      width 100%
      border 1px solid #6b6b6b
      font-size 22px
      text-align right
      color deepskyblue
      font-weight 500
      &:focus
        outline none
  button
    height 30px
    border-radius 15px
    border 1px solid #6b6b6b
    background-color white
    width 80px
    font-size 22px
    margin 0 0 20px 10px
    &:focus
      outline none
  .hidden
    display none
