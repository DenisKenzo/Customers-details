#gallery
  border-bottom 1px solid grey
  width 100%
  .label-wrap
    width 100%
    height 100px
    h1
      float left
      margin 40px 0 0 30px
      font-weight 500
      font-size 32px
      color #6b6b6b
    .gallery-label
      width 130px
      height 36px
      border-radius 18px
      background-color #e8ffff
      margin 40px 30px 0 0
      text-align center
      font-size 20px
      padding-top 3px
      float right
      color #6b6b6b
  #swiper-wrap-gallery
    .swiper-container
      position static
      .video_play
        position absolute
        width 150px
        height 150px
        margin auto
        top 0
        left 0
        bottom 0
        right 0
      img, video
        padding 30px
        width 100%
        height 335px
      object
        width 100%
        height 100%
      h1
        position relative
        width 100%
        text-align center
        padding 0px
        margin-top -25px
        margin-bottom 10px
      .swiper-pagination
        transform translateY(-790px)
        bottom auto
        .swiper-pagination-bullet
          width 20px
          height 20px
        .swiper-pagination-bullet-active
          background #fc351f
  .add-media-wrap
    width 100%
    height 120px
    .add-button
      float right
      width 80px
      margin 20px 40px 0 20px
    .add-label
      float right
      margin 40px 20px 0 20px
      color #6b6b6b
  .add-input-wrap
    padding 30px
    .file-input
      height 60px
      width 100%
      border 1px solid #6b6b6b
      font-size 36px
      text-align right
      color deepskyblue
      font-weight 500
      border none
      &:focus
        outline none
    .previw-wrap
      .previewText
        font-size 20px
      img
        height 120px
    .note-input
      margin-top 10px
      height 120px
      width 100%
      border 1px solid #6b6b6b
      font-size 36px
      text-align right
      color deepskyblue
      font-weight 500
      &:focus
        outline none
  button
    height 60px
    border-radius 30px
    border 2px solid #6b6b6b
    background-color white
    width 120px
    font-size 32px
    margin 10px 0 20px 30px
  .hidden
    display none
