#gallery
  border-bottom 1px solid grey
  width 100%
  .label-wrap
    width 100%
    height 100px
    h1
      float left
      margin 40px 0 0 30px
      font-weight 500
      font-size 32px
      color #6b6b6b
    .gallery-label
      width 130px
      height 36px
      border-radius 18px
      background-color #e8ffff
      margin 40px 30px 0 0
      text-align center
      font-size 20px
      padding-top 3px
      float right
      color #6b6b6b
  #swiper-wrap-gallery
    .swiper-container
      position static
      .video_play
        position absolute
        width 150px
        height 150px
        margin auto
        top 0
        left 0
        bottom 0
        right 0
      img, video
        padding 30px
        width 100%
        height 335px
      object
        width 100%
        height 100%
      h1
        position relative
        width 100%
        text-align center
        padding 0px
        margin-top -25px
        margin-bottom 10px
      .swiper-pagination
        transform translateY(-790px)
        bottom auto
        .swiper-pagination-bullet
          width 20px
          height 20px
        .swiper-pagination-bullet-active
          background #fc351f
  .add-media-wrap
    width 100%
    height 120px
    .add-button
      float right
      width 80px
      margin 20px 40px 0 20px
    .add-label
      float right
      margin 40px 20px 0 20px
      color #6b6b6b
  .add-input-wrap
    padding 30px
    .file-input
      height 60px
      width 100%
      border 1px solid #6b6b6b
      font-size 36px
      text-align right
      color deepskyblue
      font-weight 500
      border none
      &:focus
        outline none
    .previw-wrap
      .previewText
        font-size 20px
      img
        height 120px
    .note-input
      margin-top 10px
      height 120px
      width 100%
      border 1px solid #6b6b6b
      font-size 36px
      text-align right
      color deepskyblue
      font-weight 500
      &:focus
        outline none
  button
    height 60px
    border-radius 30px
    border 2px solid #6b6b6b
    background-color white
    width 120px
    font-size 32px
    margin 10px 0 20px 30px
  .hidden
    display none
//MODAL (Gallery)
.modal
  display block
  overflow scroll
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 1050
  -webkit-overflow-scrolling touch
  outline 0
  &.fade
    .modal-dialog
      -webkit-transform translate(0, -25%)
      -ms-transform translate(0, -25%)
      -o-transform translate(0, -25%)
      transform translate(0, -25%)
      -webkit-transition -webkit-transform 0.3s ease-out
      -moz-transition -moz-transform 0.3s ease-out
      -o-transition -o-transform 0.3s ease-out
      transition transform 0.3s ease-out
  &.in
    opacity 1
    .modal-dialog
      -webkit-transform translate(0, 0)
      -ms-transform translate(0, 0)
      -o-transform translate(0, 0)
      transform translate(0, 0)
.modal-dialog
  position relative
  margin 10px
  width 98%
  height 100%
.modal-content
  position relative
  background-color #fff
  outline 0
  border-radius 20px
  #gallery-swiper-wrap
    img
      width 100%
      height 950px
      object-fit cover
    video
      width 100%
      height 950px
.swiper-button-prev, .swiper-button-next
  position absolute
  top 45%
  width 120px
  height 120px
  border-radius 50%
  z-index 10
  cursor pointer
  background-color rgba(255, 255, 255, 0.5)
.swiper-button-prev
  left 10px
  right auto
  &:before
    position relative
    content '<'
    font-size 60px
    left 38px
    top 16px
.swiper-button-next
  right 10px
  left auto
  &:before
    position relative
    content '>'
    font-size 60px
    left 45px
    top 16px
.modal-header
  background-color black
  height 120px
  border-top-left-radius 20px
  border-top-right-radius 20px
  img
    float right
    width 80px
    margin 20px 20px 20px 0
    transform rotate(45deg)
.modal-footer
  background-color black
  text-align right
  height 180px
  border-bottom-left-radius 20px
  border-bottom-right-radius 20px
  .data
    width 80%
    padding-top 20px
    display inline-block
    h1
      float left
      text-align left
      width 100%
      color grey
      padding-left 20px
      margin 0px
      &:nth-of-type(2)
        color white
        height 80px
  .icons
    width 20%
    display inline-block
    padding 15px
    img
      height 100%
      width 50%
      padding-right 10px
      &:nth-of-type(1)
        padding-right 20px
.modal-backdrop
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 1040
  background-color #000
  &.in
    opacity 0.5
.fade
  opacity 0
  -webkit-transition opacity .15s linear
  -o-transition opacity .15s linear
  transition opacity .15s linear
