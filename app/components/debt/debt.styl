#debt
  border-bottom 1px solid grey
  .label-wrap
    width 100%
    height 60px
    .debt-label
      padding 5px 20px 5px 20px
      border-radius 20px
      background-color #e8ffff
      margin-top 20px
      margin-right 30px
      text-align right
      font-size 20px
      float right
      color #6b6b6b
      .count-debt
        color deepskyblue
        font-weight 500
  .debt-list
    height 120px
    padding-top 20px
    .debt-list-name
      width 50%
      display inline-block
      padding-left 100px
      color deepskyblue
      font-weight 500
      font-size 36px
      transform translateY(6px)
    .debt-list-desc
      width 50%
      display inline-block
      text-align right
      padding-right 30px
      color #6b6b6b
      font-weight 500
      font-size 36px
    .debt-list-date
      width 100%
      text-align right
      padding-right 30px
      font-size 18px
  .debt-default
    height 120px
    img
      float right
      width 80px
      margin 20px 60px 0 20px
      display block
    h1
      float right
      margin 40px 20px 0 20px
      color #6b6b6b
      display block
  .debt-active
    width 100%
    display block
    .edit
      height 240px
      .description
        width 100%
        padding 40px 30px 0 30px
        .description-input
          display inline-block
          height 60px
          width 60%
          border 1px solid #6b6b6b
          font-size 36px
          text-align right
          color deepskyblue
          font-weight 500
          &:focus
            outline none
        .description-label
          padding-left 30px
          color #6b6b6b
          display inline-block
      .count
        width 100%
        padding 20px 30px 0 30px
        button
          display inline-block
          height 60px
          border-radius 30px
          border 2px solid #6b6b6b
          background-color white
          width 120px
          font-size 32px
          transform translateY(6px)
          margin-right 18%
        .ink
          display inline-block
          position relative
          width 60px
          height 60px
          border-radius 50%
          background-color deepskyblue
          margin 0 10px 0 10px
          transform translateY(26px)
          cursor pointer
          span
            position absolute
            color white
            font-size 60px
            padding-left 12.5px
            transform translateY(-13px)
          .minus
            padding-left 20px
            transform translateY(-17.5px)
        .count-input
          display inline-block
          height 60px
          width 20%
          border 1px solid #6b6b6b
          border-top 2px solid #6b6b6b
          border-left 2px solid #6b6b6b
          color deepskyblue
          font-size 36px
          font-weight 500
          text-align center
          &:focus
            outline none
        h3
          display inline-block
          float right
          padding-right 20px
          font-size 22px
  .hidden
    display none
