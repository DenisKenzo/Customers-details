#topnav
  .header
    background-color #ffcd00
    height 100px
    padding-top 20px
    position relative
    text-align center
    border-bottom 2px solid white
    .arrow-wrap
      width 15%
      display inline-block
      .arrow-back
        color white
        cursor pointer
        width 30px
    .client-name
      width 70%
      display inline-block
      transform translateY(-20px)
      .icon-online
        background #09ce17
        border 2px solid white
        border-radius 50%
        display inline-block
        transform translateY(2px)
        height 30px
        width 30px
      h1
        color white
        display inline-block
        font-size 42px
        margin 0 auto
        padding-left 5px
        padding-top 10px
    .edit-wrap
      width 15%
      display inline-block
      transform translateY(-20px)
      .edit
        background-color #ffcd00
        border none
        color white
        font-size 42px
        &:focus
          outline none
  .buttons
    text-align center
    div
      padding-left 0
      padding-right 0
    button
      background-color #b8954c
      border none
      height 100px
      width 100%
      color #dbc89d
      font-size 42px
      margin 0 auto
      cursor pointer
      &:focus
        outline none
    .customers-wrap
      display inline-block
      width 50%
      border-right 1px solid white
    .appointments-wrap
      display inline-block
      width 50%
      border-left 1px solid white
  .active
    button
      background-color #ffb300
      color white
