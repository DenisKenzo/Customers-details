#topnav
  .header
    background-color #ffcd00
    height 50px
    padding-top 8px
    position relative
    text-align center
    .arrow-wrap
      width 15%
      display inline-block
      .arrow-back
        color white
        cursor pointer
        width 16px
    .client-name
      width 70%
      display inline-block
      margin-top 5px
      .icon-online
        background #09ce17
        border 2px solid white
        border-radius 50%
        display inline-block
        transform translateY(2px)
        height 18px
        width 18px
      h1
        color white
        display inline-block
        margin 0 auto
        padding-left 5px
        padding-right 5px
    .edit-wrap
      width 15%
      display inline-block
      margin-top 5px
      .edit
        background-color #ffcd00
        border none
        color white
        &:focus
          outline none
      .add
        height 30px
        margin-top -2px
