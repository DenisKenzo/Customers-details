#phone
  border-bottom 1px solid grey
  .phone
    height 60px
    img
      width 40px
      margin 10px 0 10px 10px
    .call-label
      padding 0px 20px
      height 20px
      border-radius 10px
      background-color #e8ffff
      margin-top 5px
      margin-right 10px
      text-align center
      font-size 14px
      float right
      color #6b6b6b
    h1
      float right
      padding-top 10px
      transform translateX(58px)
      color #00B6FB
      font-weight 500
  .add-phone
    height 60px
    cursor pointer
    img
      float right
      width 40px
      margin 10px 30px 0 10px
      display block
    h1
      float right
      margin 20px 10px 0 20px
      color #6b6b6b
      display block
  .phone-edit
    display block
    width 100%
    height 90px
    padding-left 10px
    padding-top 10px
    padding-bottom 10px
    .edit
      width 100%
      height 30px
      .edit-input
        display inline-block
        height 30px
        width 75%
        border 1px solid #6b6b6b
        font-size 22px
        text-align right
        color deepskyblue
        font-weight 500
        &:focus
          outline none
      .edit-label
        width 25%
        padding-left 10px
        color #6b6b6b
        display inline-block
        margin 0
    .button
      width 100%
      height 35px
      padding-top 10px
      button
        display inline-block
        height 30px
        border-radius 15px
        border 1px solid #6b6b6b
        background-color white
        width 80px
        font-size 22px
        margin 0 0 20px 0
        &:focus
          outline none
  .hidden
    display none
