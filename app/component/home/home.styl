#home

  .header
    background-color #ffcd00
    height 80px
    padding-top 13px
    position relative
    text-align center
    .fa-angle-left
      color white
      cursor pointer
      font-size 70px
      margin-top -10px
    h1
      color white
      display inline-block
      font-size 50px
      margin 0 auto
      padding-right 5px
    .icon-online
      background #09ce17
      border 2px solid white
      border-radius 50%
      display inline-block
      transform translateY(2px)
      height 30px
      width 30px
  .buttons
    text-align center
    div
      background-color #ffb300
      cursor pointer
      height 80px
      padding-top 15px
    div:hover
      background-color #b8954c
    h1
      color white
      font-size 50px
      margin 0 auto
  .hero
    margin-top 80px
    position relative
    .carousel
      .carousel-indicators
        bottom -70px
        z-index 100
        li
          background #f8f8f8
          width 25px
          height 25px
          border-radius 50%
        .active
          background #fc351f
    img
      pointer-events none
      user-select none
      width 100%
      z-index 1
    .fa-star
      color #6d6d6d
      font-size 70px
      position absolute
      top 20px
      left 20px
    .fa-star-active
      color #fec20f
    .input-group
      bottom 0
      height 80px
      position absolute
      background: rgba(0,0,0,0.3)
      .input-group-addon
        background: rgba(0,0,0,0.0)
        border none
        cursor pointer
        visibility visible
        img
          width 50px
      .input-group-addon-hidden
        visibility hidden
      .input-wrap
        padding 15px
        .form-control
          background  white
          color #00b6fb
          font-size 36px
          font-weight 600
          height 50px
          text-align center
          &:focus
            background: rgba(0,0,0,0.0)
            text-align right
            border none
            box-shadow none
            outline none
        .form-control-disabled
          pointer-events none
    .label
      background-color #ef3f25
      border-radius 30px 30px 0 0
      bottom 80px
      height 80px
      position absolute
      right 35px
      width 40%
      h1
        color white
        font-size 50px
        margin 0 auto
        padding 10px
